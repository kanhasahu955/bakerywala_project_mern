generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("LOCAL_DATABASE_URL")
}

model User {
  id    String   @id @default(auto()) @map("_id") @db.ObjectId
  role  RoleType @default(USER)
  email String   @unique
  name  String
  bio   String?
  avatar String?
  password String
}

enum RoleType {
  ADMIN
  USER
}
